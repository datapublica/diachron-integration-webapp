@require '../../variables.styl'

.changes
  height 100%
  .changes-container
    padding-top 20px
    height 100%
    margin auto
    .filter-column
      padding 0 10px 0 60px
      height 100%
      border-width 0 1px 0 0
      border-style solid
      border-color #eeeeee
      .filter-chart
        h4
          margin-bottom 5px
        .subtitle
          font-style italic
          font-size .8em
          margin-top 0
      .item
        padding 10px
      .version
        padding 10px 10px 10px 20px

    .content-column
      .content-container
        padding 10px
        .section
          margin-bottom 20px
        .header
          font-weight bold
          padding 10px 0
        .change-item
          padding 0 0 5px 0
