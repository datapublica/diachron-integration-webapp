@require '../../variables.styl'

.homepage
  height 100%
  color $color-primary
  .homepage-container
    height 100%
    margin auto
    .index-column
      border-style solid
      border-color #eeeeee
      border-width 0 1px 0 0
      padding-top 20px
      height 100%
      .item
        padding 10px
        cursor pointer
      .version
        padding 10px 10px 10px 20px
        cursor pointer
      .version.selected
        background-color $color-secondary-background

    .content-column
      .content-container
        padding 10px
        .section
          margin-bottom: 20px
